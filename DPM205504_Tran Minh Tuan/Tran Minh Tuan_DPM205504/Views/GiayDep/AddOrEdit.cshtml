@model GiayDepViewModel

@{
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <p class="mt-0 mb-2 fw-semibold text-dark font-18 text-center">@ViewBag.RenderedHtmlTitle</p>
            <form asp-action="AddOrEdit" asp-controller="GiayDep" asp-route-id="@Model.MaGiay">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaGiay" value="@Model.MaGiay" />
               
                <div>
                    <div class="form-group mb-2">
                        <label asp-for="TenGiay" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="TenGiay" class="form-control" placeholder="Nhập tên giày" value="@Model.TenGiay" />
                        </div>
                        <span asp-validation-for="TenGiay" class="text-danger"></span>
                    </div><!--end form-group-->

                    <div class="form-group mb-2">
                        <label asp-for="SizeGiay" class="control-label"></label>
                        <div class="input-group mb-2">
                            <input asp-for="SizeGiay" type="number" class="form-control" placeholder="Nhập size giày" value="@Model.SizeGiay" />
                        </div>
                        <span asp-validation-for="SizeGiay" class="text-danger"></span>
                    </div><!--end form-group-->
          
                    <div class="form-group">
                        <br />
                        <div class="col-md-12 offset-md-5">
                            <div class="d-flex">
                                <div style="margin-right:10px;">
                                    <input type="submit" value="Submit" class="btn btn-primary btn-block" style="width:80px" />
                                </div>
                                <div>
                                    <a asp-controller="GiayDep" asp-action="Index" class="btn btn-success text-white"><i class="fe-log-out"></i> Close</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div> <!-- end card-->
</div>

@section scripts{
}